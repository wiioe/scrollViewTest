        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_01"
            android:background="#8f41bc"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_02"
            android:background="#3ad9d1"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_03"
            android:background="#99e922"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_04"
            android:background="#ff42d0"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_05"
            android:background="#bc4b22"
            android:textColor="#ffffff"
            />
